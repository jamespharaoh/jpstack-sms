<console-module
	name="sms-customer-manager">

	<console-helper-provider
		object-name="smsCustomerManager">

		<priv-key
			name="smsCustomerManager.manage"
			priv="manage"/>

		<priv-key
			name="smsCustomerManager.messages"
			priv="messages"/>

		<priv-key
			name="smsCustomerManager.stats"
			priv="stats"/>

		<context-stuff
			name="smsCustomerManagerName"
			field="name"/>

	</console-helper-provider>

	<object-context
		name="smsCustomerManager"
		object-name="smsCustomerManager">

		<list>

			<object-list-page
				fields="list"/>

			<object-create-page/>

		</list>

		<object>

			<object-summary-page
				fields="summary"/>

			<section
				name="settings"
				label="Settings">

				<object-settings-page
					short-name="general"
					fields="settings"/>

				<context-link
					name="template"
					link="smsCustomerTemplate"
					label="Templates"
					priv-key="smsCustomerManager.manage"/>

			</section>

			<context-link
				name="affiliate"
				link="smsCustomerAffiliate"
				label="Affiliates"/>

			<section
				name="admin"
				label="Admin">

				<context-link
					name="customer"
					link="smsCustomer"
					label="Customers"
					priv-key="smsCustomerManager.manage"/>

			</section>

			<section
				name="reports"
				label="Reports">

				<object-sms-messages-page/>

				<object-sms-stats-page/>

			</section>

			<object-events-page/>

		</object>

	</object-context>

	<field-set
		name="list"
		object-name="smsCustomerManager">

		<parent-field/>
		<name-field/>
		<description-field/>

	</field-set>

	<field-set
		name="summary"
		object-name="smsCustomerManager">

		<id-field/>
		<parent-field/>
		<code-field/>
		<name-field/>
		<description-field/>
		<deleted-field/>

		<seconds-field
			name="sessionTimeout"
			nullable="yes"/>

		<object-field
			name="stopNumberList"
			object-type="numberList"/>

	</field-set>

	<field-set
		name="settings"
		object-name="smsCustomerManager">

		<id-field/>
		<parent-field/>
		<code-field/>
		<name-field/>
		<description-field/>
		<deleted-field/>

		<seconds-field
			name="sessionTimeout"
			nullable="yes"/>

		<object-field
			name="stopNumberList"
			object-type="numberList"/>

	</field-set>

</console-module>
