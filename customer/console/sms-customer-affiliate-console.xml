<console-module
	name="sms-customer-affiliate">

	<console-helper-provider
		object-name="smsCustomerAffiliate">

		<priv-key
			name="smsCustomerAffiliate.manage"
			priv="manage"/>

		<priv-key
			name="smsCustomerAffiliate.messages"
			priv="messages"/>

		<priv-key
			name="smsCustomerAffiliate.stats"
			priv="stats"/>

		<context-stuff
			name="smsCustomerAffiliateName"
			field="name"/>

		<context-stuff
			name="smsCustomerManagerId"
			delegate="smsCustomerManager"
			field="id"/>

		<run-post-processor
			name="smsCustomerManager"/>

	</console-helper-provider>

	<object-context
		name="smsCustomerAffiliate"
		object-name="smsCustomerAffiliate">

		<list>

			<object-list-page
				fields="list"/>

			<object-create-page
				fields="create"/>

		</list>

		<object>

			<object-summary-page
				fields="summary"/>

			<object-settings-page
				fields="settings"/>

			<section
				name="report"
				label="Reports">

				<object-sms-stats-page/>

				<object-sms-messages-page/>

			</section>

			<object-events-page/>

		</object>

	</object-context>

	<field-set
		name="list"
		object-name="smsCustomerAffiliate">

		<name-field/>
		<description-field/>

	</field-set>

	<field-set
		name="create"
		object-name="smsCustomerAffiliate">

		<parent-field/>
		<name-field/>
		<description-field/>

	</field-set>

	<field-set
		name="summary"
		object-name="smsCustomerAffiliate">

		<id-field/>
		<parent-field/>
		<code-field/>
		<name-field/>
		<description-field/>
		<deleted-field/>

	</field-set>

	<field-set
		name="settings"
		object-name="smsCustomerAffiliate">

		<id-field/>
		<parent-field/>
		<code-field/>
		<name-field/>
		<description-field/>
		<deleted-field/>

	</field-set>

</console-module>
