<console-module
	name="sms-customer-template">

	<console-helper-provider
		object-name="smsCustomerTemplate"
		view-delegate-field="smsCustomerManager"
		view-delegate-priv-code="manage">

		<priv-key
			name="smsCustomerTemplate.manage"
			delegate="smsCustomerManager"
			priv="manage"/>

		<context-stuff
			name="smsCustomerTemplateName"
			field="name"/>

		<context-stuff
			name="smsCustomerManagerId"
			delegate="smsCustomerManager"
			field="id"/>

		<run-post-processor
			name="smsCustomerManager"/>

	</console-helper-provider>

	<object-context
		name="smsCustomerTemplate"
		object-name="smsCustomerTemplate">

		<list>

			<object-list-page
				fields="list"/>

			<object-create-page
				fields="create"/>

		</list>

		<object>

			<object-summary-page
				fields="summary"/>

			<object-settings-page
				fields="settings"/>

			<object-events-page/>

		</object>

	</object-context>

	<field-set
		name="list"
		object-name="smsCustomerTemplate">

		<name-field/>
		<description-field/>

		<object-field
			name="router"
			finder="router"/>

		<text-field
			name="number"/>

		<text-area-field
			name="text"/>

	</field-set>

	<field-set
		name="create"
		object-name="smsCustomerTemplate">

		<parent-field/>
		<name-field/>
		<description-field/>

		<object-field
			name="router"
			finder="router"/>

		<text-field
			name="number"/>

		<text-area-field
			name="text"/>

	</field-set>

	<field-set
		name="summary"
		object-name="smsCustomerTemplate">

		<id-field/>
		<parent-field/>
		<code-field/>
		<name-field/>
		<description-field/>
		<deleted-field/>

		<object-field
			name="router"
			finder="router"/>

		<text-field
			name="number"/>

		<text-area-field
			name="text"/>

	</field-set>

	<field-set
		name="settings"
		object-name="smsCustomerTemplate">

		<id-field/>
		<parent-field/>
		<code-field/>
		<name-field/>
		<description-field/>
		<deleted-field/>

		<object-field
			name="router"
			finder="router"/>

		<text-field
			name="number"/>

		<text-area-field
			name="text"/>

	</field-set>

</console-module>
