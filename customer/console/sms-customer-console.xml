<console-module
	name="sms-customer">

	<console-helper-provider
		object-name="smsCustomer"
		view-priv="smsCustomerManager:manage">

		<priv-key
			name="smsCustomer.manage"
			delegate="smsCustomerManager"
			priv="manage"/>

		<context-stuff
			name="smsCustomerName"
			field="code"/>

		<context-stuff
			name="smsCustomerManagerId"
			delegate="smsCustomerManager"
			field="id"/>

		<run-post-processor
			name="smsCustomerManager"/>

	</console-helper-provider>

	<object-context
		name="smsCustomer"
		object-name="smsCustomer">

		<list>

			<object-search-page
				search-fields="search"
				results-fields="results"
				parent-id-key="smsCustomerManagerId"
				parent-id-name="smsCustomerManagerId"/>

		</list>

		<object>

			<object-summary-page
				fields="summary"/>

			<object-settings-page
				fields="settings"/>

			<context-link
				name="session"
				link="smsCustomerSession"
				label="Sessions"
				priv-key="smsCustomer.manage"/>

			<object-events-page/>

		</object>

	</object-context>

	<field-set
		name="search"
		class="wbs.sms.customer.model.SmsCustomerSearch">

		<text-field
			name="numberLike"
			label="Number"
			nullable="yes"/>

	</field-set>

	<field-set
		name="results"
		object-name="smsCustomer">

		<code-field/>

		<object-field
			name="number"
			object-type="number"/>

		<timestamp-field
			name="createdTime"/>

		<integer-field
			name="numSessions"
			label="Sessions"/>

		<object-field
			name="smsCustomerAffiliate"
			label="Affiliate"
			object-type="smsCustomerAffiliate"/>

	</field-set>

	<field-set
		name="summary"
		object-name="smsCustomer">

		<id-field/>
		<parent-field/>
		<code-field/>

		<object-field
			name="number"
			object-type="number"/>

		<timestamp-field
			name="createdTime"/>

		<timestamp-field
			name="lastActionTime"/>

		<object-field
			name="activeSession"
			object-type="smsCustomerSession"
			root-field="this"/>

		<integer-field
			name="numSessions"/>

		<date-field
			name="dateOfBirth"/>

		<text-area-field
			name="notesText"
			label="Notes"/>

		<object-field
			name="smsCustomerAffiliate"
			label="Affiliate"
			object-type="smsCustomerAffiliate"/>

	</field-set>

	<field-set
		name="settings"
		object-name="smsCustomer">

		<date-field
			name="dateOfBirth"
			nullable="yes"/>

		<text-area-field
			name="notesText"
			label="Notes"
			nullable="yes"/>

		<object-field
			name="smsCustomerAffiliate"
			label="Affiliate"
			object-type="smsCustomerAffiliate"
			nullable="yes"/>

	</field-set>

</console-module>
