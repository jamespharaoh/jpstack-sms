<console-module
	name="sms-customer">

	<console-helper-provider
		object-name="smsCustomer"
		view-delegate-field="smsCustomerManager"
		view-delegate-priv-code="manage">

		<priv-key
			name="smsCustomer.manage"
			delegate="smsCustomerManager"
			priv="manage"/>

		<context-stuff
			name="smsCustomerName"
			field="code"/>

		<context-stuff
			name="smsCustomerManagerId"
			delegate="smsCustomerManager"
			field="id"/>

		<run-post-processor
			name="smsCustomerManager"/>

	</console-helper-provider>

	<object-context
		name="smsCustomer"
		object-name="smsCustomer">

		<list>

			<object-search-page
				search-fields="search"
				results-fields="results"
				parent-id-key="smsCustomerManagerId"
				parent-id-name="smsCustomerManagerId"/>

		</list>

		<object>

			<object-summary-page
				fields="summary"/>

			<object-settings-page
				fields="settings"/>

			<object-events-page/>

		</object>

	</object-context>

	<field-set
		name="search">

		<text-field
			name="numberLike"
			label="Number"
			nullable="yes"/>

	</field-set>

	<field-set
		name="results"
		object-name="smsCustomer">

		<code-field/>

		<object-field
			name="number"
			finder="number"/>

		<timestamp-field
			name="createdTime"/>

	</field-set>

	<field-set
		name="summary"
		object-name="smsCustomer">

		<id-field/>
		<parent-field/>
		<code-field/>

		<object-field
			name="number"
			finder="number"/>

		<timestamp-field
			name="createdTime"/>

		<object-field
			name="welcomeMessage"
			finder="message"/>

		<object-field
			name="warningMessage"
			finder="message"/>

	</field-set>

	<field-set
		name="settings"
		object-name="smsCustomer">

		<id-field/>
		<parent-field/>
		<code-field/>

	</field-set>

</console-module>
