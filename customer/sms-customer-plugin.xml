<plugin
	name="customer"
	package="wbs.sms.customer">

	<plugin-dependencies>
		<plugin-dependency name="scaffold"/>
		<plugin-dependency name="sms-core"/>
	</plugin-dependencies>

	<sql-scripts>
		<sql-schema name="sms-customer"/>
	</sql-scripts>

	<models>
		<model name="smsCustomer"/>
		<model name="smsCustomerManager"/>
		<model name="smsCustomerSession"/>
		<model name="smsCustomerTemplate"/>
	</models>

	<fixtures>
		<fixture name="smsCustomerManager"/>
	</fixtures>

	<layer name="logic">
		<bean class="logic.SmsCustomerLogicImpl"/>
	</layer>

	<layer name="daemon">
		<bean class="daemon.SmsCustomerSessionTimeoutDaemon"/>
		<bean class="daemon.SmsCustomerStopCommand"/>
	</layer>

	<console-modules>
		<console-module name="sms-customer"/>
		<console-module name="sms-customer-manager"/>
		<console-module name="sms-customer-session"/>
		<console-module name="sms-customer-template"/>
	</console-modules>

</plugin>
