<record
	name="smpp-route"
	type="major">

	<fields>

		<!-- id -->

		<foreign-id-field
			field="route"/>

		<!-- identity -->

		<master-field
			type="route"/>

		<!-- settings -->

		<string-field
			name="connect-hostname"/>

		<integer-field
			name="connect-port"/>

		<string-field
			name="bind-system-id"/>

		<string-field
			name="bind-password"/>

	</fields>

</record>
