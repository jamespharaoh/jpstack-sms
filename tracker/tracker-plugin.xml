<plugin
	name="tracker"
	package="wbs.sms.tracker">

	<sql-scripts>
		<sql-schema name="sms-simple-tracker"/>
		<sql-schema name="sms-tracker"/>
	</sql-scripts>

	<models>
		<model name="smsSimpleTracker"/>
		<model name="smsSimpleTrackerNumber"/>
		<model name="smsSimpleTrackerRoute"/>
		<model name="smsTracker"/>
		<model name="smsTrackerType"/>
	</models>

	<layer name="logic">
		<bean class="logic.SmsSimpleTrackerHandler"/>
		<bean class="logic.SmsTrackerLogicImplementation"/>
		<bean class="logic.SmsTrackerManagerImplementation"/>
	</layer>

</plugin>
