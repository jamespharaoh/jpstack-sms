<record
	name="currency"
	type="major">

	<fields>

		<!-- id -->

		<generated-id-field/>

		<!-- identity -->

		<parent-field
			type="slice"/>

		<code-field/>

		<!-- details -->

		<name-field/>

		<description-field/>

		<deleted-field/>

		<!-- settings -->

		<integer-field
			name="divisions"/>

		<string-field
			name="prefix"/>

		<string-field
			name="singularSuffix"/>

		<string-field
			name="pluralSuffix"/>

	</fields>

	<priv-types>

		<priv-type
			name="Manage"
			description="Full control of a currency"
			template="yes"/>

		<priv-type
			name="View"
			description="View a currency"
			template="yes"/>

		<!-- slice -->

		<priv-type
			subject="slice"
			name="Currency create"
			description="Create currencies in a slice"
			template="yes"/>

		<priv-type
			subject="slice"
			name="Currency view"
			description="View all currencies in a slice"
			template="yes"/>

	</priv-types>

</record>