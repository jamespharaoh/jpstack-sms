<record
	name="postgresqlStatActivity"
	type="common"
	create="no"
	mutable="no"
	table="pg_stat_activity">

	<fields>

		<!-- id -->

		<assigned-id-field
			column="procpid"/>

		<!-- data -->

		<string-field
			name="databaseName"
			column="datname"/>

		<string-field
			name="userName"
			column="usename"/>

		<string-field
			name="currentQuery"
			column="current_query"/>

	</fields>

</record>