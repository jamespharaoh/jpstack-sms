<record
	name="postgresqlMaintenance"
	type="ephemeral">

	<fields>

		<!-- id -->

		<generated-id-field/>

		<!-- identity -->

		<!-- TODO -->

		<!-- data -->

		<enum-field
			name="frequency"
			type="postgresqlMaintenanceFrequency"/>

		<integer-field
			name="sequence"/>

		<!-- settings -->

		<string-field
			name="command"/>

		<!-- state -->

		<timestamp-field
			name="lastRun"
			column-type="postgresql"
			nullable="yes"/>

		<integer-field
			name="lastDuration"
			nullable="yes"/>

		<string-field
			name="lastOutput"
			nullable="yes"/>

	</fields>

</record>