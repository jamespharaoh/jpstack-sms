<record
	name="message-set-message"
	type="ephemeral">

	<fields>

		<!-- id -->

		<generated-id-field/>

		<!-- identity -->

		<parent-field
			type="message-set"
			cacheable="yes"/>

		<index-field/>

		<!-- settings -->

		<reference-field
			type="route"/>

		<string-field
			name="number"/>

		<string-field
			name="message"/>

	</fields>

</record>