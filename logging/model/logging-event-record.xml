<record
	name="loggingEvent"
	type="event">

	<fields>

		<!-- id -->

		<generated-id-field/>

		<!-- identity -->

		<parent-field
			type="loggingDynamicContext"
			cacheable="yes"/>

		<timestamp-field
			name="timestamp"
			column-type="postgresql"/>

		<!-- data -->

		<enum-field
			name="severity"
			type="loggingEventSeverity"/>

		<string-field
			name="parameters"/>

		<string-field
			name="additionalData"
			nullable="yes"/>

		<string-field
			name="exceptionSummary"
			nullable="yes"/>

	</fields>

</record>