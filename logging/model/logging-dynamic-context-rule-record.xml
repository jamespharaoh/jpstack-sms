<record
	name="loggingDynamicContextRule"
	type="minor">

	<fields>

		<!-- id -->

		<generated-id-field/>

		<!-- identity -->

		<parent-field
			type="loggingDynamicContext"
			cacheable="yes"/>

		<identity-enum-field
			name="severity"
			type="loggingEventSeverity"/>

		<!-- settings -->

		<yes-no-field
			name="recursive"/>

		<duration-field
			name="keepForDuration"/>

	</fields>

	<collections>

		<associative-collection
			name="events"
			type="loggingEvent"
			table="logging_dynamic_context_rule_event"
			owned="yes"/>

	</collections>

</record>