<console-module
	name="logging-global-rule">

	<console-helper-provider
		object-name="loggingGlobalRule"/>

	<object-context
		name="loggingGlobalRule"
		object-name="loggingGlobalRule">

		<list>

			<object-list-page
				form="list"/>

			<object-create-page
				form="create"/>

		</list>

		<object>

			<object-summary-page
				form="summary"/>

			<object-settings-page
				form="settings"/>

			<object-events-page/>

		</object>

	</object-context>

	<forms>

		<form
			name="list"
			object-type="logging-global-rule"
			type="read-only">

			<columns>

				<enum-field
					name="severity"/>

				<yes-no-field
					name="recursive"/>

				<duration-field
					name="keepForDuration"/>

			</columns>

		</form>

		<form
			name="create"
			object-type="logging-global-rule"
			type="create">

			<columns>

				<enum-field
					name="severity"/>

				<yes-no-field
					name="recursive"/>

				<duration-field
					name="keepForDuration"/>

			</columns>

		</form>

		<form
			name="summary"
			object-type="logging-global-rule"
			type="read-only">

			<columns>

				<id-field/>

				<enum-field
					name="severity"/>

				<yes-no-field
					name="recursive"/>

				<duration-field
					name="keepForDuration"/>

			</columns>

		</form>

		<form
			name="settings"
			object-type="logging-global-rule"
			type="update">

			<columns>

				<enum-field
					name="severity"/>

				<yes-no-field
					name="recursive"/>

				<duration-field
					name="keepForDuration"/>

			</columns>

		</form>

	</forms>

</console-module>