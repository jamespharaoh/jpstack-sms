<plugin
	name="route-router"
	package="wbs.sms.route.router">

	<plugin-dependencies>
		<plugin-dependency name="sms-core"/>
	</plugin-dependencies>

	<models>
		<model name="router"/>
		<model name="routerType"/>
		<model name="simpleRouter"/>
	</models>

	<layer name="entity">
		<bean class="model.RouterTypeBuilder"/>
		<bean class="model.RouterTypeSpec"/>
		<bean class="model.RouterTypesBuilder"/>
		<bean class="model.RouterTypesSpec"/>
	</layer>

	<layer name="logic">
		<bean class="logic.RouterHelperManager"/>
		<bean class="logic.RouterLogicImpl"/>
		<bean class="logic.SimpleRouterHelper"/>
		<bean class="logic.StaticRouterHelper"/>
	</layer>

	<fixtures>
		<fixture name="simpleRouter"/>
	</fixtures>

	<console-modules>
		<console-module name="router"/>
		<console-module name="simple-router"/>
	</console-modules>

</plugin>
