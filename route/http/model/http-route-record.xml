<record
	name="http-route"
	type="minor">

	<fields>

		<!-- id -->

		<generated-id-field/>

		<!-- identity -->

		<parent-field
			type="route"
			column="routeid"/>

		<!-- data -->

		<reference-field
			type="network"
			column="networkid"/>

		<!-- settings -->

		<yes-no-field
			name="post"/>

		<string-field
			name="url"/>

		<string-field
			name="params"/>

		<string-field
			name="success-regex"
			column="successregex"/>

		<string-field
			name="temporary-failure-regex"
			column="tempfailureregex"/>

		<string-field
			name="permanent-failure-regex"
			column="permfailureregex"/>

		<string-field
			name="daily-failure-regex"
			column="dailyfailureregex"/>

		<string-field
			name="credit-failure-regex"
			column="creditfailureregex"/>

		<string-field
			name="param-encoding"/>

	</fields>

	<senders>

		<sender
			name="HTTP"
			description="HTTP SMS sender"/>

	</senders>

</record>