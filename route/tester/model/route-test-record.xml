<record
	name="route-test"
	type="event">

	<fields>

		<!-- id -->

		<generated-id-field/>

		<!-- identity -->

		<parent-field
			type="route-tester"/>

		<!-- TODO index -->

		<timestamp-field
			name="sent-time"
			column-type="postgresql"/>

		<!-- data -->

		<reference-field
			type="route"/>

		<reference-field
			name="sent-message"
			type="message"/>

		<timestamp-field
			name="returned-time"
			column-type="postgresql"
			nullable="yes"/>

		<reference-field
			name="returned-message"
			type="message"
			nullable="yes"/>

	</fields>

</record>
