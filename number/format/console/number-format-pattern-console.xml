<console-module
	name="number-format-pattern">

	<console-helper-provider
		object-name="numberFormatPattern"
		view-delegate-field="root">

		<priv-key
			name="numberFormatPattern_manage"
			delegate="root"
			priv="manage"/>

		<context-stuff
			name="numberFormatPatternName"
			field="id"/>

		<context-stuff
			name="numberFormatId"
			delegate="numberFormat"
			field="id"/>

		<run-post-processor
			name="numberFormat"/>

	</console-helper-provider>

	<object-context
		name="numberFormatPattern"
		object-name="numberFormatPattern">

		<list>

			<object-list-page
				fields="list"/>

			<object-create-page
				fields="create"
				create-priv-delegate="root"
				create-priv-code="manage"/>

		</list>

		<object>

			<object-summary-page
				fields="summary"/>

			<object-settings-page
				fields="settings"/>

		</object>

	</object-context>

	<field-set
		name="list"
		object-name="numberFormatPattern">

		<index-field/>

		<text-field
			name="inputPrefix"/>

		<text-field
			name="outputPrefix"/>

		<integer-field
			name="minimumLength"/>

		<integer-field
			name="maximumLength"/>

	</field-set>

	<field-set
		name="create"
		object-name="numberFormatPattern">

		<text-field
			name="inputPrefix"/>

		<text-field
			name="outputPrefix"/>

		<integer-field
			name="minimumLength"/>

		<integer-field
			name="maximumLength"/>

	</field-set>

	<field-set
		name="summary"
		object-name="numberFormatPattern">

		<id-field/>

		<parent-field/>

		<index-field/>

		<text-field
			name="inputPrefix"/>

		<text-field
			name="outputPrefix"/>

		<integer-field
			name="minimumLength"/>

		<integer-field
			name="maximumLength"/>

	</field-set>

	<field-set
		name="settings"
		object-name="numberFormatPattern">

		<deleted-field/>

		<text-field
			name="inputPrefix"/>

		<text-field
			name="outputPrefix"/>

		<integer-field
			name="minimumLength"/>

		<integer-field
			name="maximumLength"/>

	</field-set>

</console-module>
