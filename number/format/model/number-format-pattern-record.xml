<record
	name="number-format-pattern"
	type="ephemeral">

	<fields>

		<!-- id -->

		<generated-id-field/>

		<!-- identity -->

		<parent-field
			type="number-format"
			cacheable="yes"/>

		<index-field/>

		<!-- details -->

		<deleted-field/>

		<!-- settings -->

		<string-field
			name="input-prefix"/>

		<string-field
			name="output-prefix"/>

		<integer-field
			name="minimum-length"/>

		<integer-field
			name="maximum-length"/>

	</fields>

</record>