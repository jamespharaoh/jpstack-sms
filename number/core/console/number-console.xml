<console-module
	name="number">

	<console-helper-provider
		object-name="number"
		view-priv="parent"
		cryptor="numberCryptor">

		<priv-key
			name="number.manage"
			delegate="parent"
			priv="manage"/>

		<context-stuff
			name="numberName"
			field="number"/>

	</console-helper-provider>

	<object-context
		name="number"
		object-name="number"
		cryptor="numberCryptor">

		<list>

			<object-search-page
				search-fields="search"
				results-fields="results"/>

		</list>

		<object>

			<object-summary-page>

				<fields
					fields="summary"/>

				<heading
					label="Active subscriptions"/>

				<bean-part
					name="numberSubscriptionsActivePart"/>

			</object-summary-page>

			<object-settings-page
				fields="settings"/>

			<context-tab-responder-page
				name="subscriptions"/>

			<context-tab-responder-page
				name="services"/>

			<object-events-page/>

		</object>

	</object-context>

	<field-set
		name="search"
		class="wbs.sms.number.core.model.NumberSearch">

		<text-field
			name="number"
			nullable="yes"/>

	</field-set>

	<field-set
		name="results"
		object-name="number">

		<code-field/>

		<object-field
			name="network"
			object-type="network"/>

		<timestamp-field
			name="archiveDate"/>

		<yes-no-field
			name="free"/>

	</field-set>

	<field-set
		name="summary"
		object-name="number">

		<id-field/>
		<code-field/>

		<object-field
			name="network"
			object-type="network"/>

		<timestamp-field
			name="archiveDate"/>

		<yes-no-field
			name="free"/>

	</field-set>

	<field-set
		name="settings"
		object-name="number">

		<id-field/>
		<code-field read-only="yes"/>

		<object-field
			name="network"
			object-type="network"/>

		<yes-no-field
			name="free"/>

	</field-set>

</console-module>
