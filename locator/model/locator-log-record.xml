<record
	name="locator-log"
	type="event">

	<fields>

		<!-- id -->

		<generated-id-field/>

		<!-- identity -->

		<parent-field
			type="locator"/>

		<timestamp-field
			name="start-time"
			column-type="postgresql"/>

		<!-- details -->

		<reference-field
			type="number"/>

		<!-- data -->

		<timestamp-field
			name="end-time"
			column-type="postgresql"/>

		<yes-no-field
			name="success"/>

		<longitude-latitude-field
			name="long-lat"/>

		<reference-field
			type="service"/>

		<reference-field
			type="affiliate"/>

		<string-field
			name="error-code"/>

		<reference-field
			name="error-text"
			type="text"/>

	</fields>

</record>