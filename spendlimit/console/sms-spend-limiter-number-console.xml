<console-module
	name="sms-spend-limiter-number">

	<console-helper-provider
		object-name="smsSpendLimiterNumber"
		view-priv="smsSpendLimiter:manage">

		<priv-key
			name="smsSpendLimiterNumber.manage"
			priv="smsSpendLimiter:manage"/>

		<context-stuff
			name="smsSpendLimiterNumberName"
			field="number.number"/>

		<context-stuff
			name="smsSpendLimiterId"
			field="smsSpendLimiter.id"/>

		<run-post-processor
			name="smsSpendLimiter"/>

	</console-helper-provider>

	<object-context
		name="smsSpendLimiterNumber"
		object-name="smsSpendLimiterNumber">

		<list>

			<object-search-page
				search-fields="search"
				results-fields="results"
				parent-id-key="smsSpendLimiterId"
				parent-id-name="smsSpendLimiterId"/>

		</list>

		<object>

			<object-summary-page
				fields="summary"/>

			<context-link
				name="day"
				link="smsSpendLimiterNumberDay"
				label="Days"
				priv-key="smsSpendLimiterNumber.manage"/>

			<object-events-page/>

		</object>

	</object-context>

	<field-set
		name="search"
		class="wbs.sms.spendlimit.model.SmsSpendLimiterNumberSearch">

		<text-field
			name="numberLike"
			label="Number"
			nullable="yes"/>

		<!--
		<currency-range-field
			name="totalSpend"
			currency="smsSpendLimiter.currency"
			nullable="yes"/>

		<date-range-field
			name="lastSpendDate"
			nullable="yes"/>

		<currency-range-field
			name="lastDailySpend"
			currency="smsSpendLimiter.currency"
			nullable="yes"/>
		-->

	</field-set>

	<field-set
		name="results"
		object-name="smsSpendLimiterNumber">

		<object-field
			name="number"
			object-type="number"/>

		<currency-field
			name="totalSpent"
			currency="smsSpendLimiter.currency"/>

		<currency-field
			name="adviceSpent"
			currency="smsSpendLimiter.currency"/>

		<date-field
			name="lastSpendDate"/>

		<currency-field
			name="lastDailySpend"
			currency="smsSpendLimiter.currency"/>

	</field-set>

	<field-set
		name="summary"
		object-name="smsSpendLimiterNumber">

		<id-field/>
		<parent-field/>

		<object-field
			name="number"
			object-type="number"/>

		<currency-field
			name="totalSpent"
			currency="smsSpendLimiter.currency"/>

		<currency-field
			name="adviceSpent"
			currency="smsSpendLimiter.currency"/>

		<date-field
			name="lastSpendDate"/>

		<currency-field
			name="lastDailySpend"
			currency="smsSpendLimiter.currency"/>

	</field-set>

</console-module>
