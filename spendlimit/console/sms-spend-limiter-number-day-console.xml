<console-module
	name="sms-spend-limiter-number-day">

	<console-helper-provider
		object-name="smsSpendLimiterNumberDay"
		view-priv="smsSpendLimiterNumber.smsSpendLimiter:manage">

		<priv-key
			name="smsSpendLimiterNumberDay.manage"
			priv="smsSpendLimiterNumber.smsSpendLimiter:manage"/>

		<context-stuff
			name="smsSpendLimiterNumberDayName"
			field="date"/>

		<context-stuff
			name="smsSpendLimiterNumberId"
			field="smsSpendLimiterNumber.id"/>

		<run-post-processor
			name="smsSpendLimiterNumber"/>

	</console-helper-provider>

	<object-context
		name="smsSpendLimiterNumberDay"
		object-name="smsSpendLimiterNumberDay">

		<list>

			<object-list-page
				fields="list"/>

		</list>

		<object>

			<object-summary-page
				fields="summary"/>

		</object>

	</object-context>

	<field-set
		name="list"
		object-name="smsSpendLimiterNumberDay">

		<date-field
			name="date"/>

		<currency-field
			name="totalSpent"
			currency="smsSpendLimiterNumber.smsSpendLimiter.currency"/>

		<currency-field
			name="adviceSpent"
			currency="smsSpendLimiterNumber.smsSpendLimiter.currency"/>

		<yes-no-field
			name="limitSent"/>

	</field-set>

	<field-set
		name="summary"
		object-name="smsSpendLimiterNumberDay">

		<id-field/>
		<parent-field/>

		<currency-field
			name="totalSpent"
			currency="smsSpendLimiterNumber.smsSpendLimiter.currency"/>

		<currency-field
			name="adviceSpent"
			currency="smsSpendLimiterNumber.smsSpendLimiter.currency"/>

		<yes-no-field
			name="limitSent"/>

		<object-field
			name="limitMessage"
			object-type="message"/>

	</field-set>

</console-module>
