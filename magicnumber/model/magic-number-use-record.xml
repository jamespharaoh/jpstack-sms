<record
	name="magic-number-use"
	type="common">

	<fields>

		<!-- id -->

		<generated-id-field/>

		<!-- identity -->

		<parent-field
			type="magic-number"/>

		<identity-reference-field
			type="number"/>

		<!-- state -->

		<reference-field
			type="command"/>

		<integer-field
			name="ref-id"/>

		<timestamp-field
			name="last-use-timestamp"
			column-type="postgresql"/>

	</fields>

</record>