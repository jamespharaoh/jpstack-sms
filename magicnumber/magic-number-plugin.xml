<plugin
	name="magic-number"
	package="magicnumber">

	<sql-scripts>
		<sql-schema name="magic-number"/>
		<sql-data name="magic-number-data"/>
	</sql-scripts>

	<models>
		<model name="magicNumber"/>
		<model name="magicNumberSet"/>
		<model name="magicNumberUse"/>
	</models>

	<layer name="logic">
		<bean class="logic.MagicNumberLogic"/>
	</layer>

	<layer name="console">
		<bean class="console.MagicNumberCreateAction"/>
		<bean class="console.MagicNumberCreatePart"/>
		<bean class="console.MagicNumberSetEntityFinder"/>
	</layer>

	<layer name="daemon">
		<bean class="daemon.MagicNumberCommandTypeHandler"/>
	</layer>

	<console-modules>
		<console-module name="magic-number"/>
		<console-module name="magic-number-set"/>
	</console-modules>

</plugin>
