<record
	name="deploymentVersion"
	type="major">

	<fields>

		<!-- id -->

		<generated-id-field/>

		<!-- identity -->

		<code-field/>

		<!-- details -->

		<name-field/>
		<description-field/>
		<deleted-field/>

		<!-- data -->

		<reference-field
			name="releaseNotes"
			type="text"/>

	</fields>

	<!-- TODO does not belong here -->

	<background-processes>

		<background-process
			object-type="root"
			name="Deployment agent ${hostname}"
			description="Monitor and restart deployments on ${hostname}"
			frequency="1 second"/>

	</background-processes>

</record>