<record
	name="consoleDeployment"
	type="major">

	<fields>

		<!-- id -->

		<generated-id-field/>

		<!-- identity -->

		<code-field/>

		<!-- details -->

		<name-field/>

		<description-field/>

		<deleted-field/>

		<!-- settings -->

		<string-field
			name="host"
			nullable="yes"/>

		<string-field
			name="serviceName"
			nullable="yes"/>

		<string-field
			name="statusLabel"
			nullable="yes"/>

		<!-- state -->

		<enum-field
			name="state"
			type="deploymentState"
			nullable="yes"/>

		<timestamp-field
			name="stateTimestamp"
			column-type="postgresql"
			nullable="yes"/>

		<yes-no-field
			name="restart"
			default="no"/>

	</fields>

	<event-types>

		<event-type
			name="Console deployment restarted"
			text="%0 restarted %1"
			admin="no"/>

	</event-types>

	<priv-types>

		<priv-type
			name="Manage"
			description="Full control of a console deployment"
			template="yes"/>

		<priv-type
			name="Restart"
			description="Restart a console deployment"
			template="yes"/>

		<priv-type
			name="View"
			description="View a console deployment"
			template="yes"/>

	</priv-types>

</record>