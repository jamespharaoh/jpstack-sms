<record
	name="queueSubject"
	type="common">

	<fields>

		<!-- id -->

		<generated-id-field/>

		<!-- identity -->

		<parent-field
			type="queue"/>

		<identity-integer-field
			name="objectId"/>

		<!-- state -->

		<reference-field
			name="preferredUser"
			type="user"
			nullable="yes"/>

		<!-- settings -->

		<reference-field
			name="forcePreferredUser"
			type="user"
			nullable="yes"/>

		<!-- statistics -->

		<integer-field
			name="totalItems"
			default="0"/>

		<integer-field
			name="activeItems"
			default="0"/>

	</fields>

	<collections>

		<children-list
			type="queueItem"/>

	</collections>

</record>