<record
	name="queueItemView"
	type="event"
	create="no">

	<fields>

		<!-- id -->

		<foreign-id-field
			field="queueItem"/>

		<!-- identity -->

		<master-field
			type="queueItem"/>

		<!-- index -->

		<reference-field
			name="queue"
			type="queue"/>

		<reference-field
			name="processedByUser"
			type="user"/>

		<timestamp-field
			name="timestamp"
			column-type="postgresql"/>

		<!-- data -->

		<integer-field
			name="numCreated"/>

		<integer-field
			name="numProcessed"/>

		<integer-field
			name="numPreferred"/>

		<integer-field
			name="numNotPreferred"/>

	</fields>

</record>