<record
	name="queue"
	type="minor">

	<fields>

		<!-- id -->

		<generated-id-field/>

		<!-- identity -->

		<parent-type-field
			column="parent_object_type_id"/>

		<parent-id-field
			column="parent_object_id"/>

		<code-field/>

		<!-- cached identity -->

		<reference-field
			type="slice"/>

		<!-- details -->

		<type-field
			type="queueType"/>

		<!-- settings -->

		<string-field
			name="backgroundColour"
			nullable="yes"/>

		<string-field
			name="foregroundColour"
			nullable="yes"/>

		<integer-field
			name="defaultPriority"
			column="priority"
			nullable="yes"/>

	</fields>

	<collections>

		<children-collection
			name="subjects"
			type="queueSubject"/>

	</collections>

	<priv-types>

		<priv-type
			name="Reply"
			description="Reply to items in a queue"
			template="yes"/>

		<priv-type
			name="Reply overflow"
			description="Reply to overflow items in a queue"
			template="yes"/>

	</priv-types>

</record>
