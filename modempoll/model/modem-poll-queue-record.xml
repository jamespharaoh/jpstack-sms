<record
	name="modem-poll-queue"
	type="ephemeral">

	<fields>

		<!-- id -->

		<generated-id-field/>

		<!-- data -->

		<string-field
			name="pdu"/>

		<timestamp-field
			name="created-time"
			column-type="postgresql"/>

		<!-- statistics -->

		<integer-field
			name="tries"
			default="0"/>

		<!-- state -->

		<timestamp-field
			name="retry-time"
			column-type="postgresql"/>

		<string-field
			name="error"/>

	</fields>

</record>
