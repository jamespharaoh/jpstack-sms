<console-module
	name="background-process">

	<console-helper-provider
		object-name="backgroundProcess"
		view-priv="root:manage">

		<priv-key
			name="backgroundProcess.manage"
			priv="root:manage"/>

		<context-stuff
			name="backgroundProcessName"
			field="name"/>

	</console-helper-provider>

	<object-context
		name="backgroundProcess"
		object-name="backgroundProcess">

		<list>

			<object-list-page
				form="list"/>

		</list>

		<object>

			<object-summary-page
				form="summary"/>

			<object-settings-page
				form="settings"/>

			<object-events-page/>

		</object>

	</object-context>

	<forms>

		<form
			name="list"
			object-type="background-process"
			type="read-only">

			<columns>

				<object-field
					name="parentType"
					object-type="objectType"/>

				<name-field/>
				<description-field/>

				<duration-field
					name="frequency"/>

				<yes-no-field
					name="enabled"/>

				<yes-no-field
					name="debug"/>

				<timestamp-field
					name="lastRunTime"/>

				<duration-field
					name="lastRunDuration"/>

				<yes-no-field
					name="lastRunSuccess"/>

			</columns>

		</form>

		<form
			name="summary"
			object-type="background-process"
			type="read-only">

			<columns>

				<id-field/>

				<object-field
					name="parentType"
					object-type="objectType"/>

				<code-field/>
				<name-field/>
				<description-field/>
				<deleted-field/>

				<integer-field
					name="numRuns"/>

				<yes-no-field
					name="lastRunSuccess"/>

				<timestamp-field
					name="lastRunTime"/>

				<duration-field
					name="lastRunDuration"/>

				<timestamp-field
					name="nextRunTime"/>

				<yes-no-field
					name="running"/>

				<object-field
					name="runningDaemonDeployment"
					object-type="daemonDeployment"/>

				<timestamp-field
					name="runningStartTime"/>

				<timestamp-field
					name="runningWatchdogTime"/>

				<text-area-field
					name="lastTaskLog"/>

			</columns>

		</form>

		<form
			name="settings"
			object-type="background-process"
			type="update">

			<columns>

				<id-field/>
				<code-field/>
				<name-field/>
				<description-field/>
				<deleted-field/>

				<yes-no-field
					name="enabled"/>

				<yes-no-field
					name="debug"/>

				<duration-field
					name="frequency"/>

			</columns>

		</form>

	</forms>

</console-module>
