<console-module
	name="feature">

	<console-helper-provider
		object-name="feature"
		view-priv="root:manage">

		<priv-key
			name="feature.manage"
			priv="root:manage"/>

		<context-stuff
			name="featureName"
			field="name"/>

	</console-helper-provider>

	<object-context
		name="feature"
		object-name="feature">

		<list>

			<object-list-page
				form="list"/>

			<object-create-page
				form="create"/>

		</list>

		<object>

			<object-summary-page
				form="summary"/>

			<object-settings-page
				form="settings"/>

			<object-events-page/>

		</object>

	</object-context>

	<forms>

		<form
			name="list"
			object-type="feature"
			type="read-only">

			<columns>

				<name-field/>
				<description-field/>

			</columns>

		</form>

		<form
			name="create"
			object-type="feature"
			type="create">

			<columns>

				<name-field/>
				<description-field/>

			</columns>

		</form>

		<form
			name="summary"
			object-type="feature"
			type="read-only">

			<columns>

				<id-field/>
				<code-field/>
				<name-field/>
				<description-field/>

			</columns>

		</form>

		<form
			name="settings"
			object-type="feature"
			type="update">

			<columns>

				<name-field/>
				<description-field/>

			</columns>

		</form>

	</forms>

</console-module>
