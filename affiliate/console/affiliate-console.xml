<console-module
	name="affiliate">

	<console-helper-provider
		object-name="affiliate"
		view-priv="parent:">

		<context-stuff
			name="affiliateName"
			field="id"/>

		<priv-key
			name="affiliate.manage"
			priv="parent:manage"/>

		<priv-key
			name="affiliate.messages"
			priv="parent:messages"/>

		<priv-key
			name="affiliate.stats"
			priv="parent:stats"/>

	</console-helper-provider>

	<object-context
		name="affiliate"
		object-name="affiliate">

		<object>

			<object-summary-page
				form="summary"/>

			<object-events-page/>

		</object>

	</object-context>

	<forms>

		<form
			name="summary"
			object-type="affiliate"
			type="read-only">

			<columns>

				<id-field/>
				<parent-field/>
				<code-field/>

			</columns>

		</form>

	</forms>

</console-module>
