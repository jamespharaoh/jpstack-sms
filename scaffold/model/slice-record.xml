<record
	name="slice"
	type="major">

	<fields>

		<generated-id-field/>
		<code-field/>
		<name-field/>
		<description-field/>
		<deleted-field/>

		<!-- settings -->

		<string-field
			name="filter"
			nullable="yes"/>

		<string-field
			name="adminEmail"
			nullable="yes"/>

		<string-field
			name="supervisorConfigNames"
			nullable="yes"/>

		<integer-field
			name="defaultHourOffset"
			default="0"/>

		<integer-field
			name="queueOverflowInactivityTime"
			nullable="yes"/>

		<integer-field
			name="queueOverflowOverloadTime"
			column="queue_overflow_response_time"
			nullable="yes"/>

		<integer-field
			name="queueOverflowGraceTime"
			nullable="yes"/>

		<string-field
			name="defaultTimezone"
			nullable="yes"/>

		<!-- statistics -->

		<timestamp-field
			name="currentQueueInactivityUpdateTime"
			column-type="iso"
			nullable="yes"/>

		<timestamp-field
			name="currentQueueInactivityTime"
			column-type="iso"
			nullable="yes"/>

	</fields>

	<priv-types>

		<priv-type
			name="Manage"
			description="Full control of a slice"
			template="yes"/>

		<priv-type
			name="View"
			description="View all contents of a slice"
			template="yes"/>

		<priv-type
			name="Supervisor"
			description="View supervisor reports for a slice"
			template="yes"/>

	</priv-types>

</record>
