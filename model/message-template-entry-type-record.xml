<record
	name="messageTemplateEntryType"
	type="minor">

	<fields>

		<!-- id -->

		<generated-id-field/>

		<!-- identity -->

		<parent-field
			type="messageTemplateDatabase"/>

		<code-field/>

		<!-- details -->

		<name-field/>

		<description-field/>

		<deleted-field/>

		<!-- statistics -->

		<integer-field
			name="numFields"
			default="0"/>

	</fields>

	<collections>

		<children-collection
			type="messageTemplateFieldType"/>

	</collections>

</record>