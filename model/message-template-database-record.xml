<record
	name="messageTemplateDatabase"
	type="major">

	<fields>

		<!-- id -->

		<generated-id-field/>

		<!-- identity -->

		<parent-field
			type="slice"/>

		<code-field/>

		<!-- details -->

		<name-field/>

		<description-field/>

	</fields>

	<collections>

		<children-collection
			type="messageTemplateEntryType"/>

	</collections>

	<event-types>

		<event-type
			name="Message template database copied"
			text="%0 copied types from %1 to %2"
			admin="yes"/>

	</event-types>

	<priv-types>

		<!-- message template database -->

		<priv-type
			name="Manage"
			description="Full control of a message template database"
			template="yes"/>

	</priv-types>

</record>
