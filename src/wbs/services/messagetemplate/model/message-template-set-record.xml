<record
	name="messageTemplateSet"
	type="major">

	<fields>

		<!-- id -->

		<generated-id-field/>

		<!-- identity -->

		<parent-field
			type="messageTemplateDatabase"/>

		<code-field/>

		<!-- details -->

		<name-field/>

		<description-field/>

		<!-- settings -->

		<!--
		<reference-field
			name="inherit"
			type="messageTemplateSet"
			nullable="yes"/>
		-->

		<!-- statistics -->

		<integer-field
			name="numTemplates"
			default="0"/>

	</fields>

	<collections>

		<children-mapping
			type="messageTemplateEntryValue"
			map-column="message_template_entry_type_id"
			map-type="integer"/>

	</collections>

</record>