<record
	name="group"
	type="major">

	<fields>

		<generated-id-field/>

		<parent-field
			type="slice"/>

		<code-field/>

		<name-field/>

		<description-field/>

		<deleted-field/>

	</fields>

	<collections>

		<associative-collection
			type="user"
			table="user_group"
			owned="yes"/>

		<associative-collection
			type="priv"
			table="group_priv"
			owned="yes"/>

	</collections>

	<priv-types>

		<priv-type
			name="Manage"
			description="Full control of a group"
			template="yes"/>

		<priv-type
			subject="slice"
			name="Group create"
			description="Create new groups in a slice"
			template="yes"/>

	</priv-types>

	<event-types>

		<event-type
			name="Group added"
			text="%0 added %1 to %2"
			admin="yes"/>

		<event-type
			name="Group removed"
			text="%0 removed %1 from %2"
			admin="yes"/>

		<event-type
			name="Group grant"
			text="%0 granted %1 to %2"
			admin="yes"/>

		<event-type
			name="Group revoke"
			text="%0 revoked %1 from %2"
			admin="yes"/>

	</event-types>

</record>
