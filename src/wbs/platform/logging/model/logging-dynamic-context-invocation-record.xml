<record
	name="loggingDynamicContextInvocation"
	type="common">

	<fields>

		<!-- id -->

		<generated-id-field/>

		<!-- identity -->

		<parent-field
			name="parentContext"
			type="loggingDynamicContext"/>

		<identity-reference-field
			name="childContext"
			type="loggingDynamicContext"/>

		<!-- details -->

		<timestamp-field
			name="firstSeen"
			column-type="postgresql"/>

		<timestamp-field
			name="lastSeen"
			column-type="postgresql"/>

		<integer-field
			name="numCalls"
			default="0"/>

	</fields>

</record>