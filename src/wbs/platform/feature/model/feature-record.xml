<record
	name="feature"
	type="major">

	<fields>

		<!-- id -->

		<generated-id-field/>

		<!-- identity -->

		<code-field/>

		<!-- details -->

		<name-field/>

		<description-field/>

		<deleted-field/>

	</fields>

	<priv-types>

		<priv-type
			name="Manage"
			description="Full control of a feature"
			template="yes"/>

		<priv-type
			name="View"
			description="View and use a feature"
			template="yes"/>

	</priv-types>

</record>