<record
	name="menuGroup"
	type="major">

	<fields>

		<!-- id -->

		<generated-id-field/>

		<!-- identity -->

		<parent-field
			type="slice"/>

		<code-field/>

		<!-- details -->

		<name-field/>

		<description-field/>

		<deleted-field/>

		<!-- settings -->

		<string-field
			name="label"/>

		<integer-field
			name="order"
			default="0"/>

	</fields>

	<collections>

		<children-collection
			name="menus"
			type="menuItem"
			order-sql="label"/>

	</collections>

	<priv-types>

		<priv-type
			name="Manage"
			description="Full control of a menu group"
			template="yes"/>

		<priv-type
			name="View"
			description="View all menu items in a menu group"
			template="yes"/>

	</priv-types>

</record>
