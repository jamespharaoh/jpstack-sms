<record
	name="menuItem"
	type="minor">

	<fields>

		<!-- id -->

		<generated-id-field/>

		<!-- identity -->

		<parent-field
			type="menuGroup"/>

		<code-field/>

		<!-- details -->

		<name-field/>

		<description-field/>

		<deleted-field/>

		<!-- settings -->

		<string-field
			name="label"/>

		<string-field
			name="targetPath"/>

		<string-field
			name="targetFrame"/>

	</fields>

	<priv-types>

		<priv-type
			name="Manage"
			description="Full control of a menu item"
			template="yes"/>

		<priv-type
			name="View"
			description="View all menu items in a menu item"
			template="yes"/>

	</priv-types>

</record>
