<record
	name="queueItemClaim"
	type="event">

	<fields>

		<!-- id -->

		<generated-id-field/>

		<!-- identity -->

		<parent-field
			type="queueItem"/>

		<!-- TODO index -->

		<timestamp-field
			name="startTime"
			column-type="postgresql"/>

		<!-- data -->

		<reference-field
			type="user"/>

		<reference-field
			name="unclaimUser"
			type="user"
			nullable="yes"/>

		<timestamp-field
			name="endTime"
			column-type="postgresql"
			nullable="yes"/>

		<!-- state -->

		<enum-field
			name="status"
			type="queueItemClaimStatus"/>

	</fields>

</record>