<record
	name="event"
	type="event">

	<fields>

		<!-- id -->

		<generated-id-field/>

		<!-- identity -->

		<timestamp-field
			name="timestamp"
			column-type="postgresql"/>

		<!-- data -->

		<type-field
			type="eventType"/>

	</fields>

	<collections>

		<children-list
			type="eventLink"/>

	</collections>

	<event-types>

		<!-- non admin -->

		<event-type
			name="Object created"
			text="%0 created %1 in %2"
			admin="no"/>

		<event-type
			name="Object created in"
			text="%0 created %1 of type %2 in %3"
			admin="no"/>

		<event-type
			name="Object removed in"
			text="%0 removed %1 of type %2 in %3"
			admin="no"/>

		<event-type
			name="Object field updated"
			text="%0 set %1 for %2 to %3"
			admin="no"/>

		<event-type
			name="Object field updated in"
			text="%0 set %1 for %2 of type %3 in %4 to %5"
			admin="no"/>

		<event-type
			name="Object field nulled"
			text="%0 unset %1 for %2"
			admin="no"/>

		<event-type
			name="Object field nulled in"
			text="%0 unset %1 for %2 of type %3 in %4"
			admin="no"/>

		<event-type
			name="Object code changed"
			text="%0 changed code for %1 from %2 to %3"
			admin="no"/>

		<event-type
			name="Object code changed in"
			text="%0 changed code for %1 of type %2 from %4 to %5"
			admin="no"/>

		<event-type
			name="Object name changed"
			text="%0 changed name for %1 from %2 to %3"
			admin="no"/>

		<event-type
			name="Object name changed in"
			text="%0 changed name for %1 of type %2 in %3 from %4 to %5"
			admin="no"/>

		<!-- admin -->

		<event-type
			name="Admin object created"
			text="%0 created %1 in %2"
			admin="yes"/>

		<event-type
			name="Admin object created in"
			text="%0 created %1 of type %2 in %3"
			admin="yes"/>

		<event-type
			name="Admin object removed in"
			text="%0 removed %1 of type %2 in %3"
			admin="yes"/>

		<event-type
			name="Admin object field updated"
			text="%0 set %1 for %2 to %3"
			admin="yes"/>

		<event-type
			name="Admin object field updated in"
			text="%0 set %1 for %2 of type %3 in %4 to %5"
			admin="yes"/>

		<event-type
			name="Admin object field nulled"
			text="%0 unset %1 for %2"
			admin="yes"/>

		<event-type
			name="Admin object field nulled in"
			text="%0 unset %1 for %2 of type %3 in %4"
			admin="yes"/>

		<event-type
			name="Admin object code changed"
			text="%0 changed code for %1 from %2 to %3"
			admin="yes"/>

		<event-type
			name="Admin object code changed in"
			text="%0 changed code for %1 of type %2 from %4 to %5"
			admin="yes"/>

		<event-type
			name="Admin object name changed"
			text="%0 changed name for %1 from %2 to %3"
			admin="yes"/>

		<event-type
			name="Admin object name changed in"
			text="%0 changed name for %1 of type %2 in %3 from %4 to %5"
			admin="yes"/>

		<!-- system admin -->

		<event-type
			name="Admin object created by fixture"
			text="Fixture provider %0 created %1 in %2"
			admin="yes"/>

		<event-type
			name="Admin object field updated by fixture"
			text="Fixture provider %0 set %1 for %2 to %3"
			admin="yes"/>

	</event-types>

</record>