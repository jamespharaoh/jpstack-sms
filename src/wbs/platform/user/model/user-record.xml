<record
	name="user"
	type="major">

	<fields>

		<!-- id -->

		<generated-id-field/>

		<!-- identity -->

		<parent-field
			type="slice"/>

		<code-field
			name="username"/>

		<!-- details -->

		<description-field
			name="details"/>

		<deleted-field/>
		<active-field/>

		<!-- settings -->

		<string-field
			name="fullname"/>

		<string-field
			name="password"
			nullable="yes"/>

		<string-field
			name="defaultTimezone"
			nullable="yes"/>

		<!-- statistics -->

		<slave-field
			type="userOnline"/>

	</fields>

	<collections>

		<children-collection
			type="userPriv"/>

		<children-collection
			type="userSession"/>

		<associative-collection
			type="group"
			table="user_group"/>

		<children-collection
			name="processedQueueItems"
			type="queueItem"
			join-column="processed_user_id"/>

	</collections>

	<priv-types>

		<priv-type
			name="Manage"
			description="Full control of a user"
			template="yes"/>

		<priv-type
			name="Supervisor"
			description="View supervisor reports for a user"
			template="yes"/>

	</priv-types>

	<event-types>

		<event-type
			name="User grant"
			text="%0 granted %1 to %2"
			admin="yes"/>

		<event-type
			name="User revoke"
			text="%0 revoked %1 from %2"
			admin="yes"/>

		<event-type
			name="User password reset"
			text="%0 reset password for %1"
			admin="yes"/>

		<event-type
			name="User grant by fixture"
			text="Fixture provider %0 granted %1 to %2"
			admin="yes"/>

		<event-type
			name="User password set by fixture"
			text="Fixture provider %0 set password for %1"
			admin="yes"/>

	</event-types>

</record>