<record
	name="exceptionLog"
	type="event"
	table="exception">

	<fields>

		<!-- id -->

		<generated-id-field
			sequence="exception_id_seq"/>

		<!-- identity -->

		<timestamp-field
			name="timestamp"
			column-type="postgresql"/>

		<!-- data -->

		<type-field
			name="type"
			type="exceptionLogType"/>

		<reference-field
			type="user"
			nullable="yes"/>

		<string-field
			name="source"/>

		<string-field
			name="summary"/>

		<string-field
			name="dump"/>

		<yes-no-field
			name="alert"
			default="yes"/>

		<yes-no-field
			name="fatal"/>

		<enum-field
			name="resolution"
			type="concreteExceptionResolution"/>

	</fields>

	<background-processes>

		<background-process
			object-type="exception-log"
			name="Removal"
			description="Remove old exception logs"
			frequency="1 minute"/>

	</background-processes>

</record>