<plugin
	name="shn-product"
	package="shn.product">

	<plugin-dependencies>
		<plugin-dependency name="media"/>
		<plugin-dependency name="platform-scaffold"/>
		<plugin-dependency name="shn-core"/>
		<plugin-dependency name="shn-supplier"/>
	</plugin-dependencies>

	<models>
		<model name="shnProduct"/>
		<model name="shnProductCategory"/>
		<model name="shnProductImage"/>
		<model name="shnProductSubCategory"/>
		<model name="shnProductVariant"/>
		<model name="shnProductVariantType"/>
		<model name="shnProductVariantValue"/>
	</models>

	<sql-scripts>
		<sql-schema name="shn-product"/>
	</sql-scripts>

	<fixtures>
		<fixture name="shnProductCategory"/>
		<fixture name="shnProductVariant"/>
		<fixture name="shnProduct"/>
	</fixtures>

	<layer name="api">
		<component class="api.ShnProductImageOriginalGetApiAction"/>
	</layer>

	<layer name="console">
		<component class="console.ShnProductVariantObjectFieldsProvider"/>
	</layer>

	<layer name="daemon">
		<component class="daemon.ShnProductImageNormaliseObjectDaemon"/>
	</layer>

	<layer name="logic">
		<component class="logic.ShnProductLogicImplementation"/>
	</layer>

	<api-modules>
		<api-module name="shn-product"/>
	</api-modules>

	<console-modules>
		<console-module name="shn-product"/>
		<console-module name="shn-product-category"/>
		<console-module name="shn-product-image"/>
		<console-module name="shn-product-sub-category"/>
		<console-module name="shn-product-variant"/>
		<console-module name="shn-product-variant-type"/>
		<console-module name="shn-product-variant-value"/>
	</console-modules>

</plugin>
