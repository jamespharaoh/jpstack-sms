<record
	name="shnShopifyConnection"
	type="major">

	<fields>

		<!-- id -->

		<generated-id-field/>

		<!-- identity -->

		<parent-field
			type="slice"/>

		<code-field/>

		<!-- details -->

		<name-field/>
		<description-field/>
		<deleted-field/>

		<!-- settings -->

		<reference-field
			name="database"
			type="shnDatabase"
			nullable="yes"/>

		<reference-field
			name="account"
			type="shopifyAccount"
			nullable="yes"/>

		<reference-field
			name="productDescriptionTemplate"
			type="text"
			nullable="yes"/>

		<reference-field
			name="productDescriptionAndContentsTemplate"
			type="text"
			nullable="yes"/>

	</fields>

	<priv-types>

		<priv-type
			name="Manage"
			description="Full control of a shopify connection"
			template="yes"/>

		<priv-type
			name="View"
			description="View a shopify connection"
			template="yes"/>

		<priv-type
			name="Admin"
			description="Administer a shopify connection"
			template="yes"/>

		<priv-type
			subject="slice"
			name="Shopify connection create"
			description="Create new shopify connection in a slice"
			template="yes"/>

	</priv-types>

</record>