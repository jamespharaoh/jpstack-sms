<record
	name="shnDatabase"
	type="common">

	<fields>

		<!-- id -->

		<generated-id-field/>

		<!-- identity -->

		<parent-field
			type="slice"/>

		<code-field/>

		<!-- details -->

		<name-field/>
		<description-field/>
		<deleted-field/>

		<!-- settings -->

		<reference-field
			name="currency"
			type="currency"
			nullable="yes"/>

		<string-field
			name="timezone"
			nullable="yes"/>

		<!-- data -->

		<timestamp-field
			name="imageNormaliseTime"
			column-type="postgresql"/>

	</fields>

	<priv-types>

		<priv-type
			name="Manage"
			description="Full control of a Shopping Nation database"
			template="yes"/>

		<priv-type
			name="Admin"
			description="Administer a Shopping Nation database"
			template="yes"/>

		<priv-type
			name="View"
			description="View a Shopping Nation database"
			template="yes"/>

		<priv-type
			subject="slice"
			name="SHN database create"
			description="Create new Shopping Nation databases in a slice"
			template="yes"/>

	</priv-types>

</record>