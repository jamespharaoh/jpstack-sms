<record
	name="network"
	type="major">

	<fields>

		<!-- id -->

		<assigned-id-field/>

		<!-- identity -->

		<code-field/>

		<!-- details -->

		<name-field/>

		<description-field/>

		<!-- settings -->

		<reference-field
			name="virtual-network-of-network"
			type="network"
			nullable="yes"/>

		<yes-no-field
			name="short-multipart-messages"
			default="no"/>

	</fields>

</record>
