<console-module
	name="network">

	<console-helper-provider
		object-name="network"
		view-delegate-field="root"
		view-delegate-priv-code="manage">

		<context-stuff
			name="networkName"
			field="name"/>

		<priv-key
			name="network.manage"
			delegate="root"
			priv="manage"/>

	</console-helper-provider>

	<object-context
		name="network"
		object-name="network">

		<list>

			<object-list-page
				fields="list"/>

			<object-create-page/>

		</list>

		<object>

			<object-summary-page
				fields="summary"/>

			<object-settings-page
				fields="settings"/>

			<object-events-page/>

		</object>

	</object-context>

	<field-set
		name="list"
		object-name="network">

		<name-field/>
		<description-field/>

		<object-field
			name="virtualNetworkOfNetwork"
			label="Virtual of"
			finder="network"/>

	</field-set>

	<field-set
		name="summary"
		object-name="network">

		<id-field/>
		<code-field/>
		<name-field/>
		<description-field/>

		<object-field
			name="virtualNetworkOfNetwork"
			label="Virtual of"
			finder="network"/>

		<yes-no-field
			name="shortMultipartMessages"/>

	</field-set>

	<field-set
		name="settings"
		object-name="network">

		<id-field/>
		<code-field/>
		<name-field/>
		<description-field/>

		<object-field
			name="virtualNetworkOfNetwork"
			label="Virtual of"
			finder="network"/>

		<yes-no-field
			name="shortMultipartMessages"/>

	</field-set>

</console-module>
