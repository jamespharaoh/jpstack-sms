<record
	name="userSession"
	type="event">

	<fields>

		<!-- id -->

		<generated-id-field/>

		<!-- identity -->

		<parent-field
			type="user"/>

		<!-- TODO index -->

		<timestamp-field
			name="startTime"
			column-type="postgresql"/>

		<!-- data -->

		<timestamp-field
			name="endTime"
			column-type="postgresql"
			nullable="yes"/>

		<reference-field
			name="userAgent"
			type="text"
			nullable="yes"/>

		<reference-field
			name="consoleDeployment"
			type="consoleDeployment"
			nullable="yes"/>

	</fields>

</record>