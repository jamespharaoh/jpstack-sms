<record
	name="userData"
	type="ephemeral">

	<fields>

		<!-- id -->

		<generated-id-field/>

		<!-- identity -->

		<parent-field
			type="user"/>

		<code-field/>

		<!-- details -->

		<timestamp-field
			name="createdTime"
			column-type="postgresql"/>

		<timestamp-field
			name="expiryTime"
			column-type="postgresql"/>

		<!-- state -->

		<binary-field
			name="data"/>

	</fields>

</record>