<record
	name="service"
	type="minor">

	<fields>

		<!-- id -->

		<generated-id-field/>

		<!-- identity -->

		<parent-type-field
			column="parent_object_type_id"/>

		<parent-id-field
			column="parent_object_id"/>

		<code-field/>

		<!-- cached identity -->

		<reference-field
			type="slice"
			nullable="yes"/>

		<!-- details -->

		<type-field
			column="type_id"/>

	</fields>

	<service-types>

		<!-- root -->

		<service-type
			subject="root"
			name="System"
			description="System default service"/>

	</service-types>

</record>