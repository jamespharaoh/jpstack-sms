<plugin
	name="message-inbox"
	package="wbs.sms.message.inbox">

	<sql-scripts>
		<sql-schema name="sms-inbox"/>
	</sql-scripts>

	<models>
		<enum-type name="inboxState"/>
		<model name="inbox"/>
		<model name="inboxAttempt"/>
		<model name="inboxMultipartBuffer"/>
		<model name="inboxMultipartLog"/>
	</models>

	<layer name="logic">
		<bean class="logic.InboxLogicImplementation"/>
		<bean class="logic.InboxMultipartLogicImplementation"/>
	</layer>

	<layer name="console">
		<bean class="console.MessageInboxAction"/>
		<bean class="console.MessageInboxSummaryPart"/>
		<bean class="console.MessageNotProcessedFormAction"/>
		<bean class="console.MessageNotProcessedFormResponder"/>
		<bean class="console.MessageNotProcessedQueueConsolePlugin"/>
		<bean class="console.MessageNotProcessedSummaryPart"/>
	</layer>

	<layer name="daemon">
		<bean class="daemon.ReceivedManager"/>
		<bean class="daemon.CommandManagerImpl"/>
		<bean class="daemon.CommandManagerProxy"/>
		<bean class="daemon.NullCommandTypeHandler"/>
	</layer>

	<console-modules>
		<console-module name="message-inbox"/>
		<console-module name="message-not-processed"/>
	</console-modules>

</plugin>
