<record
	name="inbox-multipart-buffer"
	type="event">

	<fields>

		<!-- id -->

		<generated-id-field/>

		<!-- identity -->

		<timestamp-field
			name="timestamp"
			column-type="postgresql"/>

		<!-- data -->

		<reference-field
			type="route"/>

		<integer-field
			name="multipart-id"/>

		<integer-field
			name="multipart-seg-max"/>

		<integer-field
			name="multipart-seg"/>

		<string-field
			name="msg-to"/>

		<string-field
			name="msg-from"/>

		<timestamp-field
			name="msg-network-time"
			column-type="postgresql"/>

		<reference-field
			name="msg-network"
			type="network"/>

		<string-field
			name="msg-other-id"/>

		<string-field
			name="msg-text"/>

	</fields>

</record>