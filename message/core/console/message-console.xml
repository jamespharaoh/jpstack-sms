<console-module
	name="message">

	<console-helper-provider
		object-name="message">

		<context-stuff
			name="messageName"
			field="id"/>

		<priv-key
			name="message.view"
			delegate="root"
			priv="messages"/>

		<priv-key
			name="message.view"
			delegate="route"
			priv="messages"/>

		<priv-key
			name="message.view"
			delegate="service.parent"
			priv="messages"/>

		<priv-key
			name="message.view"
			delegate="affiliate.parent"
			priv="messages"/>

		<priv-key
			name="message.manage"
			delegate="route"
			priv="manage"/>

	</console-helper-provider>

	<object-context
		name="message"
		object-name="message">

		<list>

			<!-- search -->

			<object-search-page
				search-fields="search"
				results-fields="results"
				results-rows-fields="resultsRows"/>

			<!-- extensions -->

			<extension-point
				name="message.stats"/>

		</list>

		<object>

			<context-tab-responder-page
				name="summary"/>

			<context-tab-responder-page
				name="reports"/>

			<context-tab-responder-page
				name="medias"/>

			<context-tab-responder-page
				name="mediaSummary"
				hide-tab="yes"/>

			<context-tab-responder-page
				name="thread"/>

			<context-tab-action-page
				name="actions"/>

			<object-events-page/>

		</object>

	</object-context>

	<field-set
		name="search"
		class="wbs.sms.message.core.model.MessageSearch">

		<integer-field
			name="messageId"
			nullable="yes"/>

		<text-field
			name="number"
			nullable="yes"/>

		<object-field
			name="routeId"
			object-type="route"
			nullable="yes"/>

		<enum-field
			name="status"
			helper="messageStatusConsoleHelper"
			nullable="yes"/>

		<enum-field
			name="direction"
			helper="messageDirectionConsoleHelper"
			nullable="yes"/>

		<object-field
			name="userId"
			object-type="user"
			nullable="yes"/>

		<object-field
			name="serviceId"
			object-type="service"
			nullable="yes"/>

		<object-field
			name="affiliateId"
			object-type="affiliate"
			nullable="yes"/>

		<interval-field
			name="createdTime"
			label="Date/time"
			nullable="yes"/>

		<timestamp-from-field
			name="createdTimeAfter"
			label="From date/time"
			nullable="yes"/>

		<timestamp-to-field
			name="createdTimeBefore"
			label="To date/time"
			nullable="yes"/>

		<text-field
			name="textContains"
			label="Message text"
			nullable="yes"/>

		<object-field
			name="networkId"
			object-type="network"
			nullable="yes"/>

	</field-set>

	<field-set
		name="results"
		object-name="message">

		<id-field/>

		<text-field
			name="numFrom"
			label="From"/>

		<text-field
			name="numTo"
			label="To"/>

		<timestamp-field
			name="createdTime"
			label="Time"/>

		<object-field
			name="route"
			object-type="route"/>

		<enum-field
			name="status"
			helper="messageStatusConsoleHelper"/>

		<object-field
			name="service"
			object-type="service"/>

		<object-field
			name="user"
			object-type="user"/>

	</field-set>

	<field-set
		name="resultsRows"
		object-name="message">

		<message-content-field/>

	</field-set>

</console-module>
