<console-module
	name="message">

	<console-helper-provider
		object-name="message">

		<context-stuff
			name="messageName"
			field="id"/>

		<priv-key
			name="message.view"
			delegate="root"
			priv="messages"/>

		<priv-key
			name="message.view"
			delegate="route"
			priv="messages"/>

		<priv-key
			name="message.view"
			delegate="service.parent"
			priv="messages"/>

		<priv-key
			name="message.view"
			delegate="affiliate.parent"
			priv="messages"/>

		<priv-key
			name="message.manage"
			delegate="route"
			priv="manage"/>

	</console-helper-provider>

	<object-context
		name="message"
		object-name="message">

		<list>

			<!-- search -->

			<context-tab-action-page
				name="search"/>

			<context-tab-responder
				tab="message.search"
				name="searchResults"/>

			<context-tab-responder
				tab="message.search"
				name="searchResultsCsv"/>

			<!-- extensions -->

			<extension-point
				name="message.stats"/>

		</list>

		<object>

			<context-tab-responder-page
				name="summary"/>

			<context-tab-responder-page
				name="reports"/>

			<context-tab-responder-page
				name="medias"/>

			<context-tab-responder-page
				name="mediaSummary"
				hide-tab="yes"/>

			<context-tab-responder-page
				name="thread"/>

			<context-tab-action-page
				name="actions"/>

			<object-events-page/>

		</object>

	</object-context>

	<field-set
		name="search"
		class="wbs.sms.message.core.model.MessageSearch">

	</field-set>

	<field-set
		name="results"
		object-name="message">

	</field-set>

</console-module>
