<record
	name="route-outbox-summary"
	type="minor"
	create="no"
	mutable="no">

	<fields>

		<!-- id -->

		<foreign-id-field
			field="route"/>

		<!-- identity -->

		<master-field
			type="route"/>

		<!-- statistics -->

		<integer-field
			name="num-messages"/>

		<timestamp-field
			name="oldest-time"
			column-type="postgresql"/>

	</fields>

</record>