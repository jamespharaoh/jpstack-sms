<record
	name="keyword"
	type="ephemeral">

	<fields>

		<!-- id -->

		<generated-id-field/>

		<!-- identity -->

		<parent-field
			type="keyword-set"/>

		<code-field
			name="keyword"/>

		<!-- details -->

		<description-field/>

		<!-- settings -->

		<reference-field
			type="command"
			nullable="yes"/>

		<yes-no-field
			name="sticky"
			default="no"/>

		<yes-no-field
			name="leave-intact"
			default="no"/>

	</fields>

</record>
