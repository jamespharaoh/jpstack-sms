<console-module
	name="gazetteer-entry">

	<console-helper-provider
		object-name="gazetteerEntry"
		view-priv="gazetteer:manage">

		<priv-key
			name="gazetteerEntry.manage"
			priv="parent:manage"/>

		<context-stuff
			name="gazetteerEntryName"
			field="name"/>

		<context-stuff
			name="gazetteerId"
			field="gazetteer:id"/>

		<run-post-processor
			name="gazetteer"/>

	</console-helper-provider>

	<object-context
		name="gazetteerEntry"
		object-name="gazetteerEntry">

		<list>

			<object-list-page
				fields="list"/>

			<object-create-page
				fields="create"/>

		</list>

		<object>

			<object-summary-page
				fields="summary"/>

			<object-settings-page
				fields="settings"/>

			<object-events-page/>

		</object>

	</object-context>

	<field-set
		name="list"
		object-name="gazetteerEntry">

		<name-field/>
		<description-field/>

		<floating-point-field
			name="longitude"
			field="longLat.longitude"
			label="Longitude"/>

		<floating-point-field
			name="latitude"
			field="longLat.latitude"
			label="Latitude"/>

		<yes-no-field
			name="canonical"/>

	</field-set>

	<field-set
		name="create"
		object-name="gazetteerEntry">

		<name-field/>
		<description-field/>

		<floating-point-field
			name="longitude"
			field="longLat.longitude"
			label="Longitude"/>

		<floating-point-field
			name="latitude"
			field="longLat.latitude"
			label="Latitude"/>

		<yes-no-field
			name="canonical"/>

	</field-set>

	<field-set
		name="summary"
		object-name="gazetteerEntry">

		<id-field/>
		<parent-field/>
		<code-field/>
		<name-field/>
		<description-field/>
		<deleted-field/>

		<floating-point-field
			name="longitude"
			field="longLat.longitude"
			label="Longitude"/>

		<floating-point-field
			name="latitude"
			field="longLat.latitude"
			label="Latitude"/>

		<yes-no-field
			name="canonical"/>

	</field-set>

	<field-set
		name="settings"
		object-name="gazetteerEntry">

		<id-field/>
		<code-field/>
		<name-field/>
		<description-field/>
		<deleted-field/>

		<floating-point-field
			name="longitude"
			field="longLat.longitude"
			label="Longitude"/>

		<floating-point-field
			name="latitude"
			field="longLat.latitude"
			label="Latitude"/>

		<yes-no-field
			name="canonical"/>

	</field-set>

</console-module>
